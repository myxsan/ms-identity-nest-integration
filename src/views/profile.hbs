<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h2>User Profile</h2>
            </div>
            <div class="card-body">
                {{#if user}}
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Basic Information</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Name:</strong></td>
                                    <td>{{user.name}}</td>
                                </tr>
                                <tr>
                                    <td><strong>Username:</strong></td>
                                    <td>{{user.username}}</td>
                                </tr>
                                <tr>
                                    <td><strong>Home Account ID:</strong></td>
                                    <td><code>{{user.homeAccountId}}</code></td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Session Information</h5>
                            <div class="alert alert-info">
                                <small>
                                    <strong>Logged in at:</strong> {{loginTime}}<br>
                                    <strong>Session expires:</strong> In 24 hours
                                </small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-3">
                        <a href="/id" class="btn btn-info me-2">View ID Token Claims</a>
                        <a href="/" class="btn btn-secondary me-2">Back to Home</a>
                        <a href="/auth/signout" class="btn btn-outline-danger">Sign Out</a>
                    </div>
                {{else}}
                    <div class="alert alert-warning">
                        <p>No user information available. Please sign in first.</p>
                        <a href="/auth/signin" class="btn btn-primary">Sign In</a>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>